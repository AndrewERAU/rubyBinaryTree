<body>
   <div class="container">
<h1 class="center title">Welcome to the Ruby Binary Tree</h1>
<%= form_for :binarytree, url: binarytrees_path do |f| %>
  <p class="input center">
    <%= f.text_field :title, placeholder: "ex) 56"%>
  </p>
  <p style="text-align:center;">
    <%= f.submit "Insert", class: "btn btn-success width"%>
    <%= f.submit "Search", class: "btn btn-primary width"%>
    <%= f.submit "Remove", class: "btn btn-danger width"%>
  </p>
  <p style="text-align:center; padding: 20px;">
     <!-- prints status without dereferencing null object -->
     <%= f.label (($binaryTree && $binaryTree.status) || "") %>
  </p>
  <p style="text-align:center; padding: 5px;">
     <!-- prints traversal without dereferencing null object -->
     <%= f.label "Preorder: " + (($binaryTree && $binaryTree.preOrderTraversal($binaryTree.head)) || "") %>
  </p>
  <p style="text-align:center;">
     <!-- prints traversal without dereferencing null object -->
     <%= f.label "Inorder: " + (($binaryTree && $binaryTree.inOrderTraversal($binaryTree.head)) || "") %>
  </p>
  </div>
</body>

<% end %>
